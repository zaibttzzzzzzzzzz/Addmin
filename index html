<script>
// Admin Password
const ADMIN_PASSWORD = "zaib331099";

// Enhanced Admin Functions
function loadAdminPanel() {
    // Load Users
    const users = JSON.parse(localStorage.getItem('pakEarnUsers')) || [];
    const userList = document.getElementById('adminUserList');
    userList.innerHTML = users.map(user => `
        <tr>
            <td>${user.email}</td>
            <td>${user.balance} PKR</td>
            <td>${user.withdrawn} PKR</td>
            <td>${new Date(user.lastLogin).toLocaleString()}</td>
            <td>${user.blocked ? '<span class="badge bg-danger">Blocked</span>' : '<span class="badge bg-success">Active</span>'}</td>
            <td>
                <button class="btn btn-sm ${user.blocked ? 'btn-success' : 'btn-danger'}" 
                    onclick="toggleUserBlock('${user.email}')">
                    ${user.blocked ? 'Unblock' : 'Block'}
                </button>
            </td>
        </tr>
    `).join('');

    // Load Tasks
    const tasks = JSON.parse(localStorage.getItem('pakEarnTasks')) || [];
    document.getElementById('adminTaskList').innerHTML = tasks.map((task, index) => `
        <li class="list-group-item d-flex justify-content-between align-items-center">
            ${task.title} (${task.reward} PKR)
            <div>
                <button class="btn btn-sm btn-danger" onclick="deleteTask(${index})">Delete</button>
            </div>
        </li>
    `).join('');

    // Load Analytics
    const totalEarnings = users.reduce((sum, user) => sum + user.withdrawn, 0);
    document.getElementById('totalUsers').textContent = users.length;
    document.getElementById('totalEarnings').textContent = totalEarnings + ' PKR';

    // Top Earners
    const topEarners = users.sort((a,b) => b.balance - a.balance).slice(0,5);
    document.getElementById('topEarners').innerHTML = topEarners.map(user => `
        <li class="list-group-item d-flex justify-content-between align-items-center">
            ${user.email}
            <span class="badge bg-success">${user.balance} PKR</span>
        </li>
    `).join('');
}

function toggleUserBlock(email) {
    const users = JSON.parse(localStorage.getItem('pakEarnUsers')) || [];
    const user = users.find(u => u.email === email);
    if(user) {
        user.blocked = !user.blocked;
        localStorage.setItem('pakEarnUsers', JSON.stringify(users));
        loadAdminPanel();
    }
}

function adminAddTask() {
    const tasks = JSON.parse(localStorage.getItem('pakEarnTasks')) || [];
    
    tasks.push({
        title: document.getElementById('taskTitle').value,
        url: document.getElementById('taskUrl').value,
        reward: parseInt(document.getElementById('taskReward').value)
    });

    localStorage.setItem('pakEarnTasks', JSON.stringify(tasks));
    loadAdminPanel();
    alert("Task added successfully!");
}

function deleteTask(index) {
    const tasks = JSON.parse(localStorage.getItem('pakEarnTasks')) || [];
    tasks.splice(index, 1);
    localStorage.setItem('pakEarnTasks', JSON.stringify(tasks));
    loadAdminPanel();
}

// Password Verification (Add to your existing login flow)
function verifyAdmin() {
    const enteredPass = prompt("Enter Admin Password:");
    if(enteredPass === ADMIN_PASSWORD) {
        document.getElementById('adminPanel').style.display = 'block';
        loadAdminPanel();
    } else {
        alert("Invalid admin password!");
    }
}
</script>

<!-- Add this button in your dashboard -->
<button class="btn btn-dark" onclick="verifyAdmin()" style="position:fixed; bottom:20px; right:20px;">
    Admin Panel ðŸ”’
</button>
